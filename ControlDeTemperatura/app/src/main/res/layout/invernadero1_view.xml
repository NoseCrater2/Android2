<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invernadero1_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtMax3"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="59dp"
        android:text="Maxima" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMax3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-59dp"
        android:text="Add" />

    <EditText
        android:id="@+id/editTemp"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMax3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-59dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtMin"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="90dp"
        android:text="Minima" />

    <TextView
        android:id="@+id/txtProm3"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="116dp"
        android:text="Promedio" />

    <TextView
        android:id="@+id/txtTodos"
        android:layout_width="349dp"
        android:layout_height="167dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnShowTodos3"
        android:layout_marginEnd="16dp"
        android:isScrollContainer="true"
        android:text="Ver todos" />

    <Button
        android:id="@+id/btnShowTodos3"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMax3"
        android:layout_below="@+id/txtProm3"
        android:text="Ver todos" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Invernadero 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

</RelativeLayout>